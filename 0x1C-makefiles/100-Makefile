# *** VARIABLES ***
# For the compiler
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
# Files
SRC = main.c holberton.c
# Convert the .c to .o
OBJ = $(SRC:.c=.o)
# Executable
NAME = holberton
# Delete
RM = rm -f
.PHONY: clean oclean fclean all re
# all need the files.o to create the executable
# we pass the objects to him with $(OBJ)
all:$(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Remove the tmp files and the executable
clean:
	$(RM) *~ $(NAME)

# Remove the .o files
oclean:
	$(RM) $(OBJ)

# Remove all files, call the oclean and the clean
fclean: oclean clean

# Remove and create all
re: fclean all

# $@ evaluate to all
# $< evaluate .c
# if OBJ not exist, create
.c:
	$(CC) $(CFLAGS) -c $< -o $@
